@model List<EventCore_UI.Dtos.EventsDtos.EventsDto>

    <style>
    .blog_item_date {
        /* Bu stil <a> etiketine uygulanacak */
        display: inline-block; /* Etiket boyutunu içerik boyutuna göre ayarlar */
    }

    .date_text {
        /* Bu stil tarih içeriğine uygulanacak */
        display: inline-block; /* İçerik boyutunu etiket boyutuna göre ayarlar */
        width: 150px; /* Örneğin, tarihlerin genişliğini buradan kontrol edebilirsin */
        text-align: center; /* İçerik merkezlenir */
        padding: 5px; /* İçerik etrafına dolgu ekleyebilirsin */
        font-size: 14px; /* İçerik yazı tipi boyutu */
    }

</style>

<section class="blog_area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mb-5 mb-lg-0">
                <div class="blog_left_sidebar">

                    @foreach (var item in Model)
                    {
                        <article class="blog_item">
                            <div class="blog_item_img">
                                <a href="#" class="blog_item_date">
                                    <span class="date_text">@item.StartDate.ToString("dd MMMM yyyy")</span>
                                </a>

                            </div>
                            <div class="blog_details">
                                <a class="d-inline-block" href="/EventDetails/EventSingle">
                                    <h2 class="blog-head" style="color: #2d2d2d;">@item.Title</h2>
                                </a>
                                <p>
                                    @item.Subtitle
                                </p>
                                <ul class="blog-info-link">
                                    <li><a href="#"><i class="fa fa-user"></i> Event Core</a></li>
                                    <li><a href="#"><i class="fa fa-comments"></i> Organise By Burak Önce</a></li>
                                </ul>
                            </div>
                        </article>
                    }

                </div>
            </div>
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    <aside class="single_sidebar_widget search_widget">
                        <form action="#">
                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" placeholder='Search Keyword'
                                           onfocus="this.placeholder = ''"
                                           onblur="this.placeholder = 'Search Keyword'">
                                    <div class="input-group-append">
                                        <button class="btns" type="button"><i class="ti-search"></i></button>
                                    </div>
                                </div>
                            </div>
                            <button class="button rounded-0 primary-bg text-white w-100 btn_1 boxed-btn"
                                    type="submit">
                                Search
                            </button>
                        </form>
                    </aside>

                </div>
            </div>
        </div>
    </div>
</section>